{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "https://canonical.github.io/charm-relation-interfaces/interfaces/tracing/schemas/provider.json",
    "type": "object",
    "title": "`tracing` provider schema",
    "description": "The `tracing` root schema comprises the entire provider databag for this interface.",
    "default": {},
    "examples": [
        {
            "application-data": {
                "hostname": "tempo.example.org",
                "ingester-ports": [
                    {
                        "type": "otlp_grpc",
                        "port": 1234
                    },
                    {
                        "type": "otlp_http",
                        "port": 1233
                    }
                ]
            },
            "related-units": {
                "tempo/0": {
                    "in-scope": true,
                    "data": {
                        "egress-subnets": "10.43.107.205/32",
                        "ingress-address": "10.43.107.205",
                        "private-address": "10.43.107.205"
                    }
                }
            }
        }
    ],
    "required": [
        "application-data",
        "related-units"
    ],
    "properties": {
        "application-data": {
            "$id": "#/properties/application-data",
            "title": "Application Databag",
            "type": "object",
            "additionalProperties": true,
            "properties": {
                "hostname": {
                    "$id": "#/properties/application-data/hostname",
                    "title": "The hostname, or external FQDN, of the tracing backend",
                    "type": "string"
                },
                "ingester-ports": {
                    "$id": "#/properties/application-data/ingester-ports",
                    "title": "The ingester ports of the tracing backend",
                    "type": "array",
                    "additionalItems": true,
                    "items": [
                        {
                            "$id": "#/properties/application-data/ingester-ports/0/ingester",
                            "title": "A single ingester port of the tracing backend",
                            "type": "object",
                            "additionalProperties": false,
                            "properties": {
                                "type": {
                                    "$id": "#/properties/application-data/ingester-ports/0/ingester/type",
                                    "title": "The type of protocol supported by the single ingester port.",
                                    "type": "string",
                                    "examples": [
                                        "jaeger",
                                        "otlp_grpc",
                                        "otlp_http",
                                        "tempo",
                                        "zipkin"
                                    ]
                                },
                                "port": {
                                    "$id": "#/properties/application-data/ingester-ports/0/ingester/port",
                                    "title": "The actual port number of a single ingester port.",
                                    "type": "integer"
                                }
                            }
                        }
                    ]
                }
            }
        },
        "related-units": {
            "$id":"#/properties/related-units",
            "title": "Unit Databags",
            "type": "object",
            "patternProperties":{
                 "^.*/d+$": {
                     "type": "object",
                     "additionalProperties": true,
                     "properties": {
                         "data": {
                             "type": "object",
                             "additionalProperties": true,
                             "properties": {}
                         }
                     }
                 }
            }
        }
    }
}
